<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Add | Bar Drink Information</h1>
			</div>
		</div>
		<div id="add-user-form" class="form row">
			<div id="add-user" autocomplete="off">
				<div class="container-fluid">
					<div
						id="add-user-row"
						class="row justify-content-center align-items-center"
					>
						<div id="add-user-column" class="">
							<div id="login-box" class="">
								<%- include ('../partials/messages') %>
								<form
									id="login-form"
									class="form"
									action="/admin/add-bar-drink"
									method="POST"
								>
									<div class="form">
										<h3 class="text-center text-info">Add Bar Drink Information</h3>
										<div class="form-group">
											<label for="drinkName" class="text-info">Drink Name:</label>
											<br />
											<input
												autocomplete="off"
												type="text"
												name="drinkName"
												id="drinkName"
												class="form-control"
												value="<%= typeof drinkName != 'undefined' ? drinkName : '' %>"
											/>
										</div>
										<div class="form-group">
											<label for="drinkCode" class="text-info">
												Drink Code:
											</label>
												<br />
											<input
												type="text"
												name="drinkCode"
												id="drinkCode"
												class="form-control"
												value="<%= typeof drinkCode != 'undefined' ? drinkCode : '' %>"
											/>
										</div>
										<div class="form-group">
											<label for="drinkType" class="text-info">
												Type of Drink:
											</label>
											<br />
											<input
												type="text"
												name="typeOfDrink"
												list="drinkType"
												id="typeOfDrink"
												class="form-control"
												value="<%= typeof typeOfDrink != 'undefined' ? typeOfDrink : '' %>"
											/>
											<datalist id="drinkType">
												<option value="Beer"></option>
												<option value="Spirit"></option>
												<option value="Wine"></option>
												<option value="RTD"></option>
												<option value="Soft-drink"></option>
												<option value="Water"></option>
											</datalist>
										</div>
										<div class="form-group">
											<label for="uom" class="text-info">Unit of Measurement:</label
											><br />
											<input
												type="text"
												name="uom"
                                                list="unit"
												id="uom"
												class="form-control"
												value="<%= typeof uom != 'undefined' ? uom : '' %>"
											/>
                                            <datalist id="unit">
												<option value="Bottles"></option>
												<option value="Crates"></option>
											</datalist>
										</div>
										<div class="form-group">
											<label for="buyingPrice" class="text-info">Buying Price:</label
											><br />
											<input
												type="number"
												name="buyingPrice"
												id="buyingPrice"
												class="form-control"
												value="<%= typeof buyingPrice != 'undefined' ? buyingPrice : '' %>"
											/>
										</div>
										<div
											class="form-group"
											style="
												display: flex;
												justify-content: center;
												padding: 10px;
											"
										>
											<input
												type="button"
												name="cancel"
												class="btn btn-secondary btn-md m-2"
												onclick="window.location='/admin/dashboard';"
												value="Cancel"
											/>
											<input
												type="submit"
												name="submit"
												class="btn btn-primary btn-md m-2"
												value="Save"
											/>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
