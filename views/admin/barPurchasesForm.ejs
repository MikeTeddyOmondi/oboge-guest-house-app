<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Bar Purchases (Stock In)</h1>
			</div>
		</div>
        <div id="add-user-form" class="form row">
            <div id="add-user" autocomplete="off">
                <div class="container-fluid">
                    <div
                        id="add-user-row"
                        class="row justify-content-center align-items-center"
                    >
                        <div id="add-user-column" class="">
                            <div id="login-box" class="">
                                <%- include ('../partials/messages') %>
                                <form
                                    id="login-form"
                                    class="form"
                                    action="/admin/bar-purchases/add"
                                    method="POST"
                                >
                                    <div class="form">
                                        <h3 class="text-center text-info">Add Stock Purchases</h3>
                                        <div class="form-group">
                                            <label for="receiptNumber" class="text-info">Receipt Number:</label>
                                            <br />
                                            <input autocomplete="off" type="text" name="receiptNumber" id="receiptNumber" class="form-control" value="<%= typeof receiptNumber != 'undefined' ? receiptNumber : '' %>" />
                                        </div>
                                        <div class="form-group">
                                            <label for="product" class="text-info">Product Code:</label><br />
                                            <input type="text" name="product" id="product" list="productName" class="form-control" value="<%= typeof product != 'undefined' ? product : '' %>" />
                                            <datalist id="productName">
                                                <% for(var i=0; i < drinkCodes.length; i++) { %>
													<option value="<%= drinkCodes[i] %>"><%= drinkCodes[i] %></option>
												<% } %>
											</datalist>
                                        </div>
                                        <div class="form-group">
                                            <label for="quantity" class="text-info">Quantity:</label><br />
                                            <input type="number" name="quantity" id="quantity" class="form-control" value="<%= typeof quantity != 'undefined' ? quantity : '' %>" />
                                        </div>
                                        <div class="form-group">
                                            <label for="supplier" class="text-info">Supplier:</label><br />
                                            <input type="text" name="supplier" id="supplier" class="form-control" value="<%= typeof supplier != 'undefined' ? supplier : '' %>" />
                                        </div>
                                        <div class="form-group" style="display: flex; justify-content: center; padding: 10px;">
                                            <input type="button" name="cancel" class="btn btn-secondary btn-md m-2" onclick="window.location='/admin/bar-purchases';" value="Cancel" />
                                            <input type="submit" name="submit" class="btn btn-primary btn-md m-2" value="Save" />
                                        </div>
                                    </div>                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	</div>
</div>