<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Bookings | Accomodations</h1>
            </div>
        </div>
        <div class="form-group" style="display: flex; flex-direction: row; justify-content: space-around;">
            <div class="mt-2 mb-3">
                <a
                    href="/admin/customers/add"
                    class="btn btn-primary btn-lg rounded"
                    >New Customer
                </a>
            </div>
            <div class="mt-2 mb-3">
                <a
                    href="/admin/bookings/search-customer"
                    class="btn btn-warning btn-lg rounded"
                    >Search Customer
                </a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Bookings | Accomodations Info</div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover table-dark" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Customer Name</th>
                                        <th>ID Number</th>
                                        <th>Room Number</th>
                                        <th>Check In Date</th>
                                        <th>Check Out Date</th>
                                        <th>Total Amount Payable</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bookings.forEach(booking => { %>
                                        <tr class="">
                                            <td>
                                                <%= booking.customer.firstname %> <%= booking.customer.lastname %>
                                            </td>
                                            <td>
                                                <%= booking.customer.id_number %>
                                            </td>
                                            <td>
                                                <%= booking.roomBooked.roomNumber %>
                                            </td>
                                            <td>
                                                <%= booking.checkInDate.toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <%= booking.checkOutDate.toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <%=  new Intl.NumberFormat('ke-KE', {style: 'currency', currency: 'KSH', minimumFractionDigits: 0}).format(booking.totalCost) %>
                                            </td>
                                            <td>
                                                <a href="/admin/bookings/edit/<%= booking._id%>" class="btn border-shadow update">
                                                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                                </a>
                                                <a href="/admin/bookings/delete/<%= booking._id%>" class="btn border-shadow delete">
                                                    <span class="text-gradient"><i class="fa fa-times"></i></span>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>