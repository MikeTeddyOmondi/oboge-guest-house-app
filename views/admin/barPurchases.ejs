<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Bar Purchases (Stock In)</h1>
			</div>
		</div>
		<div class="form row">
			<div class="mt-3 mb-5 d-flex">
				<div class="mt-2 mx-auto">
					<a
						href="/admin/bar-purchases/add"
						class="btn btn-primary btn-md rounded"
						>Add New | Bar Purchase
					</a>
					<br><br>
					<div class="row">
						<div class="col-lg-12">
							<div class="panel panel-default">
								<div class="panel-heading">Stock Purchases Info</div>
								<div class="panel-body">
									<div class="table-responsive">
										<table class="table table-striped table-bordered table-hover table-dark" id="dataTables-example">
											<thead>
												<tr>
													<th>Receipt Number</th>
													<th>Product Code</th>
													<th>Product Name</th>
													<th>Quantity (Unit of Measurement)</th>
													<th>Stock Value</th>
													<th>Supplier</th>
												</tr>
											</thead>
											<tbody>
											    <% purchases.forEach(purchase => { %>
													<tr class="">
														<td>
															<%= purchase.receiptNumber %>
														</td>
														<td>
															<%= purchase.product.drinkCode %>
														</td>
														<td>
															<%= purchase.product.drinkName %>
														</td>
														<td>
															<%= purchase.quantity %> <%= purchase.product.uom %>
														</td>
														<td>
															<%= new Intl.NumberFormat('ke-KE', {style: 'currency', currency: 'KSH', minimumFractionDigits: 0}).format(purchase.stockValue) %>
														</td>
														<td>
															<%= purchase.supplier %>
														</td>
													</tr>
												<% }) %>
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
