<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Customers</h1>
            </div>
        </div>
        <%- include ('../partials/messages') %>
            <a href="/admin/customers/add" class="btn btn-primary">Add Customer</a>
            <br><br>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Customers Info</div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover table-dark" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Firstname</th>
                                            <th>Lastname</th>
                                            <th>ID Number</th>
                                            <th>Phone Number</th>
                                            <th>Email</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% customers.forEach(customer => { %>
                                            <tr class="">
                                                <td>
                                                    <%= customer.firstname %>
                                                </td>
                                                <td>
                                                    <%= customer.lastname %>
                                                </td>
                                                <td>
                                                    <%= customer.id_number %>
                                                </td>
                                                <td>
                                                    <%= customer.phone_number %>
                                                </td>
                                                <td>
                                                    <%= customer.email %>
                                                </td>
                                                <td>
                                                    <a href="/admin/customers/edit/<%= customer._id%>" class="btn border-shadow update">
                                                        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                                    </a>
                                                    <a href="/admin/customers/delete/<%= customer._id%>" class="btn border-shadow delete">
                                                        <span class="text-gradient"><i class="fa fa-times"></i></span>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>