<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add | Room Information</h1>
            </div>
        </div>
        <div id="add-user-form" class="form row">
            <div id="add-user" autocomplete="off">
                <div class="container-fluid">
                    <div id="add-user-row" class="row justify-content-center align-items-center">
                        <div id="add-user-column" class="">
                            <div id="login-box" class="">
                                <%- include ('../partials/messages') %>
                                    <form id="login-form" class="form" action="/room-info" method="POST">
                                        <div class="form">
                                            <h3 class="text-center text-info">Add Room Information</h3>
                                            <div class="form-group">
                                                <label for="roomType" class="text-info">Room Type:</label>
                                                <br />
                                                <input autocomplete="off" type="text" name="roomType" id="roomType" class="form-control" value="<%= typeof roomType != 'undefined' ? roomType : '' %>" />
                                            </div>
                                            <div class="form-group">
                                                <label for="roomCapacity" class="text-info">Room Capacity:</label><br />
                                                <input type="number" name="roomCapacity" id="roomCapacity" class="form-control" value="<%= typeof roomCapacity != 'undefined' ? roomCapacity : '' %>" />
                                            </div>
                                            <div class="form-group">
                                                <label for="roomNumber" class="text-info">Room Number:</label><br />
                                                <input type="text" name="roomNumber" id="roomNumber" class="form-control" value="<%= typeof roomNumber != 'undefined' ? roomNumber : '' %>" />
                                            </div>
                                            <div class="form-group">
                                                <label for="roomRate" class="text-info">Room Rate:</label><br />
                                                <input type="number" name="roomRate" id="roomRate" class="form-control" value="<%= typeof roomRate != 'undefined' ? roomRate : '' %>" />
                                            </div>
                                            <div class="form-group">
                                                <label for="role" class="text-info">Room booked:</label><br />
                                                <div class="custom-control custom-radio">
                                                    <input type="radio" id="isBooked" name="booked" value="true" class="custom-control-input">
                                                    <label class="custom-control-label" for="bookedRadioBtn">Booked</label>
                                                </div>
                                                <div class="custom-control custom-radio">
                                                    <input type="radio" id="notBooked" name="booked" value="false" class="custom-control-input">
                                                    <label class="custom-control-label" for="notBookedRadioBtn">Not booked</label>
                                                </div>
                                            </div>
                                            <div class="form-group" style="display: flex; justify-content: center; padding: 10px;">
                                                <input type="button" name="cancel" class="btn btn-secondary btn-md m-2" value="Cancel" />
                                                <input type="submit" name="submit" class="btn btn-primary btn-md m-2" value="Save" />
                                            </div>
                                        </div>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>