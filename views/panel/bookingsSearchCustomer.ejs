<div id="main-row" class="row">
	<div class="mt-2">
		<a href="/user-panel/bookings" class="btn btn-secondary rounded"
			>&#x21d0;
		</a>
	</div>
	<h1>Bookings | Accomodations</h1>
	<hr />
	<%- include ('../partials/messages') %>
	<form
		id="searchForm"
		class="form"
		action="/user-panel/bookings/search-customer"
		method="POST"
	>
		<div class="form row">
			<fieldset>
				<legend class="mb-3">Search Customer:</legend>
				<div class="col-md">
					<div class="form-floating">
						<input
							type="text"
							class="form-control"
							id="id_number"
							name="id_number"
							placeholder="ID Number/ Passport/ Driver License"
							required
						/>
						<label for="floatingInputGrid">Search by: ID Number</label>
					</div>
				</div>
			</fieldset>
		</div>
		<div class="form row">
			<div class="mt-3 mb-2">
				<input
					type="submit"
					class="btn btn-primary"
					value="Search"
					name="Search"
				/>
			</div>
		</div>
	</form>
	<hr />
</div>
